<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:paddingBottom="20.0dip"
        android:paddingLeft="20.0dip"
        android:paddingTop="20.0dip"
        android:text="• 验证码下发会有延迟，请耐心等待\n• 检查手机网络信号是否通畅\n• 检查手机号输入是否正确"
        android:textColor="@color/comm_text_h1_color"
        android:textSize="16.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/comm_divider_color" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_other_bg"
        android:gravity="center"
        android:paddingBottom="20.0dip"
        android:paddingLeft="20.0dip"
        android:paddingTop="20.0dip"
        android:text="@string/qqqun"
        android:textColor="@color/comm_link_color"
        android:textSize="16.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/comm_divider_color" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/btn_other_bg"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip"
        android:text="返回"
        android:textColor="@color/comm_text_h1_color"
        android:textSize="15.0sp" />

</LinearLayout>
